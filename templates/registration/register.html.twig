{% extends 'base_login.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="container shadow p-3 mb-5 bg-body-tertiary rounded">
    <div class="d-flex">
        <img src="{{ asset('assets/img/welcoming.svg')}}" alt="Image upload fichier" class="img-register">
        <h1 class="display-6 mt-5 ms-2">Formulaire d'inscription</h1>
    </div>
    <hr>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email, {
        label: 'Adresse e-mail'
    }) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'Mot de passe'
    }) }}
    {# {{ form_row(registrationForm.agreeTerms) }} #}

    <button class="btn btn-success btn-login py-3 col-3 offset-9" type="submit">M'inscrire</button>
            
    {{ form_end(registrationForm) }}

</div>
    
{% endblock %}
